pipeline {
    agent any
    stages {
        stage('Launch Application') {
            agent {
                docker {
                    image 'docker:27.5.1'
                    reuseNode true
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                sh 'docker compose up --build -d'
            }
        }
        stage('E2E Tests') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.50.0-jammy'
                    reuseNode true
                    args '-u 0 --network=host -v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            steps {
                dir('tests-e2e') {
                    sh 'npm ci'
                    sh 'npx playwright test'
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
